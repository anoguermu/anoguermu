
<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            <h1>White list</h1>
        </div>
        <div class="card-body">
            {{#if users}}
            <ul class="list-group">
                {{#each users}}
                <li class="list-group-item d-flex justify-content-between align-items center">
                    
                    {{name}}
                    <a href="/delete-contact/{{@key}}" class="btn btn-danger">
                        Delete
                    </a>
                </li>
                {{/each}}
            </ul>
            {{else}}
            <p>no users yet</p>
            {{/if}}
        </div>
        <div class="card-footer">
            
            {{#if check}}
            <form action="/adduser" method="POST">
                <div class="form-group">
                    <div class="form-floating mb-3 text-dark">
                        <input type="text"  name="id" class="form-control" id="floatingPassword"  placeholder="product id" value="{{check}}" readonly="readonly"/>
                    </div>

                    <div class="form-floating mb-3 text-dark">
                        <input type="text" name="name" class="form-control" id="floatingInput" placeholder="name" autofocus required/>
                        <label for="floatingInput"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">name</font></font></label>
                    </div>
                    <button class="btn btn-secondary btn-block">
                        Add 
                    </button>
                </div>
            </form>
            {{else}}
            <div class="form-group"></div>
                <form action="/reco" method="POST">
                    <div class="form-floating mb-3 text-dark">
                        <input type="text"  name="id" class="form-control" id="floatingPassword"  placeholder="product id"  required/>
                        <label for="floatingPassword"><font style="vertical-align: inherit;" ><font style="vertical-align: inherit;">product id</font></font></label>
                    </div>
                    <button class="btn btn-secondary btn-block">
                        Add 
                    </button>
                    </form>
            </div>
            {{/if}}
           
        </div>
    </div>
</div>